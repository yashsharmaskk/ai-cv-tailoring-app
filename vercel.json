{
  "version": 2,
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/extract-text", "dest": "/api/extract-text.ts" },
    { "src": "/parse-cv", "dest": "/api/parse-cv.ts" },
    { "src": "/ai/tailor-cv", "dest": "/api/ai/tailor-cv.ts" },
    { "src": "/health", "dest": "/api/health.ts" },
    { "src": "/api-status", "dest": "/api/api-status.ts" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ],
  "functions": {
    "api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}
